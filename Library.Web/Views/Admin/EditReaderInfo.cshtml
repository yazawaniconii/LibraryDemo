@{
    Layout = "_AdminLayout";
}
@using Library.Web.Models.EnumModels
@model Library.Web.Models.ReaderViewModel
@if (ViewBag.isSuccess == true)
{
    <div class="alert alert-success">成功</div>
}
<h3>修改读者</h3>
<!--正文内容-->
<div class="col-md-3">
    <form method="post" asp-controller="Admin" asp-action="EditReaderInfo">
        <div class="form-group">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" type="text" readonly="readonly" value="@ViewBag.id"/>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Sex"></label>
            <select asp-for="Sex" class="form-control" asp-items="Html.GetEnumSelectList<SexEnum>()"></select>
            <span asp-validation-for="Sex" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">修改</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}